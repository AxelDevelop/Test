<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/output.css">
    <title>Socket Test</title>

</head>

<body>

    <div class="backdrop">
    </div>
    <div class="auth">

    </div>
    <div class="chat-app">
        <h1 class="m-4 text-6xl text-center">CHAT PROJECT</h1>
        <div class="grid items-center justify-center grid-cols-3 grid-rows-1 m-11">
            <div class="text-center activeusers">
                <h2 class="text-2xl font-bold text-blue-900 ">Active Users</h2>
                <ul id="users"
                    class="flex flex-wrap w-10/12 p-5 pt-5 mx-auto overflow-y-scroll text-white list-none bg-gray-800 rounded-sm h-28">
                </ul>
            </div>
            <form class="modal">

                <h1 id="title">Welcome</h1>
                <br>
                <p id="content">Enter Your User Name</p>
                <br>

                <input placeholder="Enter User Name" type="text" class="">
                <br>
                <button class="transition hover:bg-blue-500">Submit</button>
            </form>
            <div class="justify-center p-5 mx-1 mb-auto">
                <div class="flex flex-col mx-auto list-none bg-gray-800 rounded-md shadow-md chatbox h-96 w-96">
                    <ul id="messagelist" class="flex-1 p-5 overflow-y-scroll text-white"></ul>
                    <form class="flex Input">
                        <input id="inputtext" class="px-3 py-4 " type="text" placeholder="Type your message ...">
                        <button
                            class="flex-1 p-1 text-white transition bg-blue-500 border-none cursor-pointer hover:bg-blue-400">Send</button>
                    </form>
                </div>
                <br>
            </div>
            <div class="w-2/3 max-w-xs m-auto">
                <h2 class="font-bold text-center">Delete Message</h2>
                <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded shadow-2xl " id="delete">
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-bold text-gray-700" for="username">Username</label>
                        <input
                            class="w-full px-3 py-2 leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="username" type="text" placeholder="Username">
                    </div>
                    <div class="mb-6">
                        <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                            Password
                        </label>
                        <input
                            class="w-full px-3 py-2 mb-3 leading-tight text-gray-700 transition border rounded shadow appearance-none focus:outline-none focus:border-orange-300 focus:shadow-outline"
                            id="description" type="text" placeholder="Message">
                        <!-- <p class="text-xs italic text-red-500">Please choose a password.</p> -->
                    </div>
                    <div class="flex items-center justify-between">
                        <div
                            class="w-2/4 p-5 m-auto font-bold text-center text-white transition transform bg-red-500 rounded cursor-pointer h-2/4 hover:bg-red-300 hover:-translate-x-1 hover:-translate-y-1">
                            <button class="capitalize" type="submit">send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.socket.io/4.5.0/socket.io.min.js"
        integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k"
        crossorigin="anonymous"></script>
    <script></script>
    <script type="module" src="/index.js"></script>

</body>

</html>